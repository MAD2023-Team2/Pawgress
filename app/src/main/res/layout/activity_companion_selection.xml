<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanionSelectionActivity"
    android:theme="@style/AppBackgroundColour">

    <TextView
        android:id="@+id/emptyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView14"
        android:fontFamily="sans-serif-condensed-medium"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="109dp"
        android:layout_height="99dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="18dp"
        android:layout_below="@id/textView14"
        android:layout_toStartOf="@id/emptyTextView"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/corgi"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="109dp"
        android:layout_height="99dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/textView14"
        android:layout_toEndOf="@id/emptyTextView"
        app:srcCompat="@drawable/grey_cat" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="116dp"
        android:layout_height="137dp"
        android:layout_marginTop="28dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/textView13"
        app:srcCompat="@drawable/pawgress_icon_final_png" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Pawgress"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_alignStart="@id/textView14"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Choose Your Study Companion (Dog or Cat)?"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/dogButton"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#88E473"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Dog"
        android:textStyle="bold"
        android:layout_below="@id/imageView6"
        android:layout_alignStart="@+id/imageView6"
        android:layout_alignEnd="@id/imageView6"/>

    <Button
        android:id="@+id/catButton"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#88E473"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Cat"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_below="@id/imageView7"
        android:layout_alignStart="@+id/imageView7"
        android:layout_alignEnd="@id/imageView7"/>

</RelativeLayout>