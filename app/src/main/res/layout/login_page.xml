<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppBackgroundColour">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        tools:context=".LoginPage">



        <RelativeLayout
            android:id="@+id/editName"
            android:layout_below="@id/imageView4"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/textView2"
                android:autofillHints="@string/inputUsername"
                android:background="@drawable/field_background"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="@string/inputUsername"
                android:inputType="text"
                android:paddingStart="5dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="75dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/usernameText"
                android:textSize="18sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/editPass"
            android:layout_below="@id/editName"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/textView3"
                android:autofillHints="@string/inputPassword"
                android:background="@drawable/field_background"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="@string/inputPassword"
                android:inputType="text"
                android:paddingStart="5dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="75dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/passwordText"
                android:textSize="18sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:layout_below="@id/button"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/createAcctTitle"
            android:textStyle="bold"
            android:layout_alignParentBottom="true" />

        <Button
            android:id="@+id/button"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#88E473"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/loginButtonText"
            android:textAlignment="center"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_below="@id/editPass" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_toStartOf="@id/centerpiece"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/app_name"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="119dp"
            android:layout_height="119dp"
            android:layout_marginTop="25dp"
            android:contentDescription="App Icon"
            android:layout_toEndOf="@id/centerpiece"
            android:src="@drawable/pawgress_icon_final_png" />

        <ImageView
            android:id="@+id/centerpiece"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_launcher_background" />
    </RelativeLayout>

</ScrollView>
